{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build VoxelSpace",
			"linux": {
				"command": "./build.sh",
				"args": ["dbg", "sdlimage"],
				"detail": "compiler: gcc-like",
				"problemMatcher": [
					"$gcc"
				]
			},
			"windows": {
				"command": ".\\build.bat",
				"args": ["dbg", "sdlimage"],
				"detail": "compiler: cl.exe",
				"problemMatcher": [
					"$msCompile"
				]
			},
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
